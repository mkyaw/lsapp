<header>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="login-page">
          <h2 style="color:black;">New Course</h2>
          <br />
          <div class="form">
             <%= simple_form_for @course, url: admin_courses_path do |f| %>
              <div class="form-group">
                <%= f.input :title %>
              </div>
              <div class="form-group">
                <%= f.input :description %>
              </div>
              <br />
              <div class="actions">
                <%= f.submit "Create", style: "background: #5CB85C; color:#fff;" %>
              </div>
            <% end %>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
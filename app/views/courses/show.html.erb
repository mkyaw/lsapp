<br />

<div class="booyah-box col-xs-10 col-xs-offset-1">

<h1><%= @course.title %></h1>
<strong><em><%= @course.description %></em></strong>

<br /><br /><br />
<% @course.questions.each do |question| %>
    <li style="list-style: none;">
        <br />
        <%= question.title %>
        <br />
        <%= link_to 'Add Answer', new_question_answer_path(question), class: 'btn btn-success btn-xs' %>
        <% question.answers.each do |answer| %>
            <li style="list-style: none;">
                <strong><%= answer.title %></strong>
            </li>
        <% end %>
    </li>
<% end %>

<% if current_user && current_user== @course.user %>
    <br />
    <br />
    <%= link_to 'Administer', admin_course_path(@course), class: 'btn btn-danger btn-large' %>
<% end %>

</div>
<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <p><i><%= @course.description %></i></p>
  <br />
  
  <%= link_to 'Preview as Student', course_path(@course), class: 'btn btn-warning' %>
  <br class="clr"/>
  <br />
  <div class="text-center">
    <%= link_to 'Add a new question', new_admin_course_question_path(@course), class: 'btn btn-primary btn-lg' %>
  </div>
  
  <br />
  <ul style="list-style-type:none">
    <% @course.questions.each do |question| %>
      <li>
        <h3><em><%= question.title %></em></h3>
      </li>
    <% end %>
  </ul>
</div>
<header>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="login-page">
          <h2 style="color:black;">Forgot your password?</h2>
          <br />
          <div class="form">
            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= devise_error_messages! %>
            
              <div class="field">
                <%= f.label :email, style: "color:black;" %><br />
                <%= f.email_field :email, autofocus: true %>
              </div>
            
              <div class="actions">
                <%= f.submit "Send me reset password instructions" ,style: "background: #5CB85C; color:#fff;" %>
              </div>
            <% end %>
            
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

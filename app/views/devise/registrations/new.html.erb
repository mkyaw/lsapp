<header>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="login-page">
          <h2 style="color:black;">Sign Up</h2>
          <br />
          <div class="form">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
              <%= devise_error_messages! %>
              <div class="form-group">
                <%= f.label :email, style: "color:#656262;" %><br />
                <%= f.email_field :email, autofocus: true, placeholder: 'Enter email' %>
              </div>
            
              <div class="form-group">
                <%= f.label :password, style: "color:#656262;" %><br />
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", placeholder: "Enter password" %>
              </div>
              
              <div class="form-group">
                <%= f.label :password_confirmation, style: "color:#656262;" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Enter password again" %>
              </div>
            
              <% if devise_mapping.rememberable? -%>
                <div class="checkbox">
                  <%= f.check_box :remember_me %><span style="color:#656262;"><strong>&nbsp;&nbsp;Remember Me</strong></span>
                </div>
              <% end -%>
              
              <br />
              
              <div class="actions">
                <%= f.submit "Sign up", style: "background: #5CB85C; color:#fff;" %>
              </div>
            <% end %>
            
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
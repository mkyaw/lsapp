  </head>
  <body id="page-top" class="index">
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top navbar-lsapp">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header page-scroll">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
          <!--<a class="navbar-brand" href="#page-top"><img src="img/LSLogoGold.png"></a>-->
          <%= link_to image_tag("LSLogoGold.png"), root_path %>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li class="hidden">
              <a href="#page-top"></a>
            </li>
            <li class="page-scroll">
              <%= link_to 'About', root_path(anchor: "about") %>
              <!--<a href="#about">About</a>-->
            </li>
            <% if user_signed_in? %>
              <% if current_user.admin? %>
                <li><%= link_to 'Admin Dashboard', admin_courses_path %></li>
              <% else %>
                <li><%= link_to 'Student Dashboard', student_student_answers_path(current_user.id) %></li>
              <% end %>
              <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to 'Log In', new_user_session_path %></li>
              <li><%= link_to 'Sign Up', new_user_registration_path %></li>
            <% end %>
            <!--
            <li class="page-scroll">
              <a href="#contact">Contact</a>
            </li>-->
          </ul>
        </div>
        <!-- /.navbar-collapse -->
      </div>
      <!-- /.container-fluid -->
    </nav>
    
    <% if notice.present? %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert"><%= alert %></p>
    <% end %>
    
    <!-- Body -->
    <%= yield %>
    

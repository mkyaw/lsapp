<header>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h2 style="color:black;">New Student Course Entry</h2>
        <br />
        <% if false %>
        <div class="form">
           <%= simple_form_for @answer, url: student_student_course_answers_path(params[:course][:course_id]) do |f| %>
            <div class="form-group">
              <%= f.label 'Select Course' %>
              <%= f.collection_select :course_id, Course.order(:title),:id,:title, include_blank: true %>
            </div>
            <br />
            <div class="form-group">
              <%= f.input :answer_one, label: 'Scholar', placeholder: 'Dr. Smith' %>
            </div>
            <div class="form-group">
              <%= f.input :answer_two, label: 'Description', placeholder: 'This was a challenging course.' %>
            </div>
            <div class="form-group">
              <%= f.input :answer_three, as: :text, label: 'Key Points and Insights', placeholder: 'This course gave me a chance to think outside the box.' %>
            </div>
            <div class="actions">
              <%= f.submit "Create", style: "background: #5CB85C; color:#fff;" %>
            </div>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>